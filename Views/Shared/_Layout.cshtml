                            <span>Welcome </span><span class="text-success font-weight-bold p-2">@User.Identity.Name.ToUpper()</span><a class="btn btn-sm btn-danger font-weight-bold" asp-action="LogOut" asp-controller="Home">SignOut</a>
                        </div>
                    }
                    else

                    {

                    <ul class="navbar-nav ml-auto text-center mb-lg-0 mb-2">
