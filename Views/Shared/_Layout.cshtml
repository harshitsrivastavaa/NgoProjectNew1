<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NgoProjectNew1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <style>

        .blink {
            animation: blinker 1.5s linear infinite;
            color: red;
            font-family: sans-serif;
        }

        @@keyframes blinker {
            50% {
                opacity: 0;
            }
        }

        * {
            margin: 0;
            padding: 0;
        }

        .navbar-light, .navbar-brand {
            color: #000;
            font-size: 25px;
            text-transform: uppercase;
            font-weight: 700;
            letter-spacing: 2px
        }

        #link {
            padding-left: 10px;
            padding-right: 10px;
        }

        #btn {
            display: inline-block;
            padding: 12px 24px;
            font-size: 16px;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.8s ease;
        }
        /* Login Button Styles */
            #btn-login {
              background-color: #000000;
              color: #fff;
            }

            /* Signup Button Styles */
            #btn-signup {
              background-color: #28a745;
              color: #fff;
            }

            /* Hover Effect */
            .btn:hover {
              opacity: 0.8;
            }

    </style>
</head>

<body>
    <header>
     
        <nav class="navbar navbar-toggleable-sm navbar-expand-sm bg-dark navbar-dark ">
            <div class="container">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/brand.png" alt="logo" style="width:25px;height:30px" />
                    <span style="font-size:15px">Hygia</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav ml-auto text-center mb-lg-0 mb-2">
                        <li class="nav-item ">
                            <a class="nav-link active " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Contact Us</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="RaiseACause">Raise a Cause</a>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Login">Raise a Cause</a>
                            </li>

                        }

                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
             
                            <span class="ml-auto" style="color:white">Welcome </span><span class="text-success font-weight-bold p-2">@User.Identity.Name.ToUpper()</span><a class="btn btn-sm btn-danger font-weight-bold" asp-action="LogOut" asp-controller="Home">SignOut</a>
                       
                    }
                    else

                    {

                    <ul class="navbar-nav ml-auto text-center mb-lg-0 mb-2">
                        <li class="nav-item" id="link">
                            <a class="btn btn-login" id="auth" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item" id="link">

                            <a class="btn btn-signup" id="auth" asp-controller="Home" asp-action="Signup">Register</a>


                        </li>

                    </ul>

                    }
                </div>
            </div>

        </nav>
    </header>
    <div >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <marquee><span class="blink" style="color:red">Live:</span> Books donating Campainee <span style="color:green">(Start Date: @DateTime.Today.Date)</span>  </marquee>
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
