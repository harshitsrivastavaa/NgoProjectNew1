        <nav class="navbar navbar-toggleable-sm navbar-expand-sm bg-dark navbar-dark ">
            <div class="container">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/brand.png" alt="logo" style="width:25px;height:30px" />
                    <span style="font-size:15px">Hygia</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav ml-auto text-center mb-lg-0 mb-2">
                        <li class="nav-item ">
                            <a class="nav-link active " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Gallery</a>
                        </li>
